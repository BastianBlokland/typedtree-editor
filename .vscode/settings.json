{
  // TypeScript
  "typescript.tsc.autoDetect": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  // Common plugins
  "cSpell.words": [
    "bbox",
    "callout",
    "classname",
    "codecov",
    "crossorigin",
    "domutils",
    "dropdown",
    "fieldname",
    "fieldvalue",
    "instantiator",
    "jsnext",
    "junit",
    "newtree",
    "nodefield",
    "nodescheme",
    "nodestyle",
    "nodetype",
    "nonenode",
    "noselect",
    "olist",
    "onwarn",
    "openexample",
    "openscheme",
    "opentree",
    "parserutils",
    "polyfill",
    "positionlookup",
    "rbox",
    "rootalias",
    "savescheme",
    "savetree",
    "scrollwheel",
    "textfield",
    "treedisplay",
    "treemodifications",
    "treeparser",
    "treepath",
    "treescheme",
    "treeschemeparser",
    "treeserializer",
    "treeview",
    "truthy",
    "tsout",
    "typedtree",
    "typelookup",
    "ulist",
    "zoomin",
    "zoomout"
],
  // Search settings
  "search.useIgnoreFiles": false,
  "search.exclude": {},
  // File format settings
  "files.exclude": {
    "node_modules": true,
    "package-lock.json": true,
    "build": true,
    "tsout": true
  },
  "files.insertFinalNewline": true,
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  // Editor whitespace handling
  "editor.renderWhitespace": "all",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [
    100
  ],
  // Integrated terminal config
  "terminal.integrated.cwd": ""
}
